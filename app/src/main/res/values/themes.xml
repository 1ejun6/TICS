<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TICS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkblue</item>
        <item name="colorSecondaryVariant">@color/darkblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NavigationMenuItemStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:font">@font/montserrat</item>
    </style>

    <style name="Theme.TICS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Style for the Toolbar -->
    <style name="Theme.TICS.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for the AppBarOverlay -->
    <style name="Theme.TICS.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

</resources>
