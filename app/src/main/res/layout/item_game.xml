<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ticCountLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Tic Count"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/GameTicCount"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:gravity="center_horizontal"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/GameIDLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game ID"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/GameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/GameDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/GameDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/GameStartTimeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/GameStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/GameEndTimeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/GameEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>


